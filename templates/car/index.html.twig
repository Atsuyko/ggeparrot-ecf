{% extends 'base.html.twig' %}

{% block title %}Garage V. Parrot - Annonces{% endblock %}

{% block body %}
<section id="occasion">
    <div class="container text-white">
        <h1 class="display-4 pt-3 img-txt">
            Espace occasions
        </h1>
        <p class="img-txt">
            Envie de de changement ? Nous vous proposons également des véhicules d’occasions à la vente !
        </p>
        <p class="img-txt">
            Pour tout renseignement ou prise de rendez-vous, un formulaire de contact disponible sur
            chaque annonce.
        </p>
    </div>
</section>
{% for message in app.flashes('primary') %}
<div class="container">
    <div class="alert alert-dismissible alert-primary mt-3">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        {{ message }}
    </div>
</div>
{% endfor %}
<div class="d-flex justify-content-center align-item-center p-3">
    <h2>Les véhicules disponible à la vente</h2>
</div>
<section id="filter">
    {% include "car/_filter.html.twig" %}
</section>
<section id="car">
    <div class="container">
        <div class="row">
            {% for car in cars %}
            <div class="col-lg-4 col-md-6">
                <div class="card border-dark my-3">
                    <img src="{{ 'uploads/' ~ car.teaserImg }}" alt="Photo Vitrine" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-title">{{ car.brand }}</h3>
                        <h5 class="card-subtitle my-3">{{ car.model }}</h5>
                        <p class="card-text">{{ car.km }} km</p>
                        <p class="card-text">{{ car.year|date("Y") }}</p>
                        <p class="card-text">{{ car.price }} €</p>
                        <a href="{{ path('car.show', {id: car.id}) }}" class="btn btn-dark shad">Consulter</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}