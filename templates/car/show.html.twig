{% extends 'base.html.twig' %}

{% block title %}Garage V. Parrot - Annonce N°{{ car.id }}{% endblock %}

{% block body %}
<section id="car-detail">
  <div class="container">
    <h3 class="display-4 mt-3">Annonce N°{{ car.id }}</h3>
    <div class="card border-dark my-3">
      <img src="/uploads/{{ car.teaserImg }}" alt="Photo Vitrine" class="card-img-top">
      <div class="card-body">
        <h3 class="card-title text-center">{{ car.brand }} {{ car.model }}</h3>
        <div class="row mt-3 text-center">
          <div class="col-4">
            <p class="card-text">{{ car.km }} km</p>
          </div>
          <div class="col-4">
            <p class="card-text">{{ car.year|date("Y") }}</p>
          </div>
          <div class="col-4">
            <p class="card-text">{{ car.price }} €</p>
          </div>
        </div>
        <p class="card-text mt-3">
          Options :
        <ul>
          {% for option in car.options %}
          <li>{{ option.name }}</li>
          {% endfor %}
        </ul>
        </p>
        <div class="row mt-3 text-center">
          <div class="col-4">
            <img src="/uploads/{{ car.img1 }}" alt="Photo Vitrine" class="card-img-bottom border">
          </div>
          <div class="col-4">
            <img src="/uploads/{{ car.img2 }}" alt="Photo Vitrine" class="card-img-bottom border">
          </div>
          <div class="col-4">
            <img src="/uploads/{{ car.img3 }}" alt="Photo Vitrine" class="card-img-bottom border">
          </div>
        </div>
        {% if app.user %}
        <div class="mt-3">
          <a href="{{ path('car.edit', {id: car.id}) }}" class="btn btn-dark shad">Modifier</a>
          <a href="{{ path('car.delete', {id: car.id}) }}" class="btn btn-dark shad text-right">Supprimer</a>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
<section id="car-contact">
  <div class="container">

  </div>
</section>

{% endblock %}