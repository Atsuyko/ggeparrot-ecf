{% extends "base.html.twig" %}

{% block title %}Garage V.Parrot - Modifier mon mot de passe{% endblock %}

{% block body %}
<div class="container">
  <h1 class="display-3 mt-3">Modifier mon mot de passe</h1>
  {% for message in app.flashes('primary') %}
  <div class="alert alert-dismissible alert-primary mt-3">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    {{ message }}
  </div>
  {% endfor %}
  {{ form_start(form) }}
  {{form(form)}}
</div>
{% endblock body %}