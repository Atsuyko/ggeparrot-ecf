{% extends 'base.html.twig' %}

{% block title %}Garage V.Parrot - Log In{% endblock %}

{% block body %}
<h1 class="mt-2 d-flex justify-content-center">Connexion</h1>
<div class="container d-flex align-item-center justify-content-center form-signin w-100 m-auto mt-4">
    <form action="{{ path('login') }}" method="post">

        {% if error %}
        <div class="alert alert-secondary mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        {% endif %}

        <div class="form-group">
            <label for="username" class="form-label mt-3">Email</label>
            <input type="email" class="form-control" name="_username" id="username" placeholder="example@example.com"
                value="{{ lastUsername }}">
        </div>
        <div class="form-group">
            <label for="password" class="form-label mt-3">Password</label>
            <input type="password" class="form-control" name="_password" id="password" placeholder="********">
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit" class="btn btn-outline-primary my-3">Connexion</button>
    </form>
</div>
{% endblock %}